rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() { return request.auth != null; }

    // Profile pictures - users can read anyone's profile pic but only write their own
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if signedIn();
      allow write: if signedIn() && request.auth.uid == userId;
    }

    // Applications - users can only access their own applications
    match /applications/{applicationId}/{allPaths=**} {
      allow read, write: if signedIn();
    }

    // Block everything else by default
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
