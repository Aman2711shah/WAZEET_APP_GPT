# WAZEET App Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials!

# ==========================================
# API Keys & Authentication
# ==========================================

# OpenAI API Key for AI chat features
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Business Expert Service URL
# Set to your Cloud Function URL or remote AI endpoint
AI_BUSINESS_EXPERT_URL=https://your-function-url.cloudfunctions.net/ai-business-expert

# Stripe Configuration (from Stripe Dashboard)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_STRIPE_SECRET_KEY

# ==========================================
# Google Sign-In OAuth 2.0
# ==========================================
GOOGLE_CLIENT_ID_WEB=your_web_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_ID_IOS=your_ios_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_ID_ANDROID=your_android_client_id.apps.googleusercontent.com

# ==========================================
# Firebase Configuration
# ==========================================
# Get from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==========================================
# App Configuration
# ==========================================
APP_ENV=development  # development, staging, production
DEBUG_MODE=true

# ==========================================
# Feature Flags
# ==========================================
ENABLE_AI_CHAT=true
ENABLE_COMMUNITY_FEATURES=true
ENABLE_ADMIN_PANEL=false

# ==========================================
# Admin Configuration
# ==========================================
# WARNING: Hardcoded admin emails in code should be migrated to Firestore
# TODO: Move to Firestore-based role management system (lib/constants/admin_whitelist.dart)
# For production, use Firestore collections: users/{userId}/role = 'admin'
ADMIN_EMAILS=admin@wazeet.com,superadmin@wazeet.com

# ==========================================
# Analytics & Monitoring
# ==========================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://xxxxxx@sentry.io/xxxxxx

# ==========================================
# Storage & Upload Limits
# ==========================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
